@page "/"


@if (Chatting)
{
    <ChatWindow Username="@Username"/>
}
else
{
    <LoginWindow OnAuthenticationChange="OpenChat" />
}

<Link To="trade"> Go to trade </Link>

@code  {
    public bool Chatting = false;
    public string Username = "index_tester";

    private void OpenChat(string username)
    {
        Chatting = true;
        Username = username;
        StateHasChanged();
    }
}